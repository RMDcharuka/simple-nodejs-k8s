pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'dinaldocker'
        DOCKERHUB_PASS = credentials('dockerhub-credentials') // set in Jenkins
        APP_NAME = 'simple-nodejs-k8s'
        DOCKER_IMAGE = "${DOCKERHUB_USER}/${APP_NAME}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/RMDcharuka/simple-nodejs-k8s.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE:latest .'
            }
        }

        stage('Push to DockerHub') {
            steps {
                withDockerRegistry([ credentialsId: 'dockerhub-credentials', url: '' ]) {
                    sh 'docker push $DOCKER_IMAGE:latest'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                kubectl apply -f k8s/deployment.yaml
                kubectl apply -f k8s/service.yaml
                '''
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Something went wrong."
        }
    }
}
